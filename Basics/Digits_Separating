/* a program that inputs one five-digit number, separates
the number into its individual digits and prints the digits separated from one another by three
spaces each */

#include <stdio.h>

// function  main begins program execution
int main(void)
{
	int number;

	printf("Enter a five-digit number:\n");

	scanf_s("%d", &number);

	printf("%d   ", number / 10000);
	printf("%d   ", (number / 1000) - (number / 10000 * 10));
	printf("%d   ", (number / 100) - (number / 1000 * 10));
	printf("%d   ", (number / 10) - (number / 100 * 10));
	printf("%d   \n", number - (number / 10 * 10));

} // end function  main 
