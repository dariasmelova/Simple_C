// a program that tess a character with functions in the character-handling library

#include <stdio.h>
#include <ctype.h>
#include <stdlib.h>

int main(void)
{
	system("chcp 1251>nul");
	printf("Эта программа демонстрирует функции из библиотеки обработки символов <ctype.h>\n");
	printf("%s%d\n", "Функция ISDIGIT определяет, является ли символ '3' цифрой от 0 до 9. Ответ: ", isdigit('3'));
	printf("%s%d\n", "Функция ISDIGIT определяет, является ли символ 'a' цифрой от 0 до 9. Ответ: ", isdigit('a'));
	printf("%s%d\n", "Функция ISALPHA определяет, является ли символ '3' буквой от a(A) до z(Z). Ответ: ", isalpha('3'));
	printf("%s%d\n", "Функция ISALPHA определяет, является ли символ 'a' буквой от a(A) до z(Z). Ответ: ", isalpha('a'));
	printf("%s%d\n", "Функция ISALNUM определяет, является ли символ '3' буквой от a(A) до z(Z) или цифрой от 0 до 9. Ответ: ", isalnum('3'));
	printf("%s%d\n", "Функция ISALNUM определяет, является ли символ 'a' буквой от a(A) до z(Z) или цифрой от 0 до 9. Ответ: ", isalnum('a'));
	printf("%s%d\n", "Функция ISXDIGIT определяет, является ли символ 'F' 16-ричной цифрой. Ответ: ", isxdigit('F'));
	printf("%s%d\n", "Функция ISXDIGIT определяет, является ли символ 'G' 16-ричной цифрой. Ответ: ", isxdigit('G'));
	printf("%s%d\n", "Функция ISSPACE определяет, является ли символ ' ' пробельным символом. Ответ: ", isspace(' '));
	printf("%s%d\n", "Функция ISSPACE определяет, является ли символ '\\b' пробельным символом. Ответ: ", isspace('\b'));
	printf("%s%d\n", "Функция ISCNTRL определяет, является ли символ ' ' управляющим символом. Ответ: ", iscntrl(' '));
	printf("%s%d\n", "Функция ISCNTRL определяет, является ли символ '\\b' управляющим символом. Ответ: ", iscntrl('\b'));
	printf("%s%d\n", "Функция ISPUNCT определяет, является ли символ '%' пунктуационным или специальным (не пробел, не буква, не цифра). Ответ: ", ispunct('%'));
	printf("%s%d\n", "Функция ISPUNCT определяет, является ли символ '\\a' пунктуационным или специальным (не пробел, не буква, не цифра). Ответ: ", ispunct('\a'));
	printf("%s%d\n", "Функция ISPRINT определяет, можно ли отобразить символ '\\v' на экране. Ответ: ", isprint('\v'));
	printf("%s%d\n", "Функция ISPRINT определяет, можно ли отобразить символ ' ' на экране. Ответ: ", isprint(' '));
	printf("%s%d\n", "Функция ISGRAPH определяет, можно ли отобразить символ ' ' на экране, кроме пробела. Ответ: ", isgraph(' '));
	printf("%s%d\n", "Функция ISGRAPH определяет, можно ли отобразить символ '.' на экране, кроме пробела. Ответ: ", isgraph('.'));
	puts("");
	printf("Отдельно продемонстрируем функции, связанные с прописными и строчными буквами\n");
	printf("%s%d\n", "Функция ISLOWER определяет, является ли символ 'a' строчной буквой. Ответ: ", islower('a'));
	printf("%s%d\n", "Функция ISLOWER определяет, является ли символ 'A' строчной буквой. Ответ: ", islower('A'));
	printf("%s%d\n", "Функция ISUPPER определяет, является ли символ 'a' прописной буквой. Ответ: ", isupper('a'));
	printf("%s%d\n", "Функция ISUPPER определяет, является ли символ 'A' прописной буквой. Ответ: ", isupper('A'));
	printf("%s%c\n", "Функция TOLOWER преобразует символ 'A' в строчную букву: ", tolower('A'));
	printf("%s%c\n", "Функция TOUPPER преобразует символ 'a' в прописную букву: ", toupper('a'));
}
