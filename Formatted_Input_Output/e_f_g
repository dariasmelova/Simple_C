// a program that uses each of the conversion specifiers e, fand g to input the value 1.2345

#include <stdio.h>

int main(void)
{
	float value;

	printf("Enter 1.2345: ");
	scanf_s("%f", &value);
	printf("%f\n", value);

	printf("Again, enter 1.2345: ");
	scanf_s("%e", &value);
	printf("You entered %e (the programm used \'e\')\n", value);

	printf("Again, enter 1.2345: ");
	scanf_s("%g", &value);
	printf("You entered %g (the programm used \'g\')\n", value);
}
