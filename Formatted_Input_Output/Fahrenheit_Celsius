/* a program that converts integer Fahrenheit temperatures from 0 to 212 degrees
to floating - point Celsius temperatures with 3 digits of precision */

#include <stdio.h>
#include <string.h>

int main(void) {

	int Fahrenheit;
	float Celcius;
	for (Fahrenheit = 0; Fahrenheit <= 212; Fahrenheit++) {
		Celcius = ((float)Fahrenheit - 32.0) / 1.8;
		printf("%10d\t%+10.3f\n", Fahrenheit, Celcius);
	}

}
