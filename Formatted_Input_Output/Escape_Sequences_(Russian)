// Демонстрация эскейп-последовательностей

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	system("chcp 1251>nul");
	char word[] = "Hello";

	// СИМВОЛЫ
	printf("\'%s\'\n", word); // одинарные кавычки
	printf("\"%s\"\n", word); // двойные кавычки
	printf("%s\?\n", word); // вопросительный знак
	printf("\\%s\\\n", word); // обратная косая черта
	printf("%s\a\n", word); // звуковой сигнал

	// ПЕРЕМЕЩЕНИЯ КУРСОРА
	printf("%s\b", word); // курсор назад на одну позицию в текущей строке
	printf("oween\n"); // допечатать, чтобы было заметно, куда переместился курсор

	printf("%s\f", word); // курсор в начало следующей логической страницы
	printf("oween\n"); // допечатать, чтобы было заметно, куда переместился курсор

	printf("%s\r", word); // курсор в начало текущей строки
	printf("oween\n"); // допечатать, чтобы было заметно, куда переместился курсор

	printf("%s\n", word); // курсор в начало следующей строки
	printf("oween\n"); // допечатать, чтобы было заметно, куда переместился курсор

	printf("%s\t", word); // курсор на следующую позицию горизонтальной табуляции
	printf("oween\n"); // допечатать, чтобы было заметно, куда переместился курсор

	printf("%s\v", word); // курсор на следующую позицию вертикальной табуляции
	printf("oween\n"); // допечатать, чтобы было заметно, куда переместился курсор
}
