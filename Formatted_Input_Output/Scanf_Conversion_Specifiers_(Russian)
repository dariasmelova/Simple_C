// Спецификаторы, используемые с функцией scanf

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	system("chcp 1251>nul");
	int a, b, c, d, e;

	printf("Введите число 437: ");
	scanf_s("%d", &a);
	printf("Вы ввели число, которое было прочитано как целое 10тичное %d", a);
	puts("");

	printf("Еще раз введите число 437: ");
	scanf_s("%i", &b);
	printf("Вы ввели число, которое было прочитано как целое 10тичное или 8ричное или 16ричное %i", b);
	printf("\nВывод на печать с помощью спецификации \"d\"%d", b);
	puts("");

	printf("Еще раз введите число 437: ");
	scanf_s("%o", &c);
	printf("Вы ввели число, которое было прочитано как целое 8ричное %o", c);
	puts("");

	printf("Еще раз введите число 437: ");
	scanf_s("%x", &d);
	printf("Вы ввели число, которое было прочитано как целое 16ричное %x", d);
	puts("");

	printf("Еще раз введите число 437: ");
	scanf_s("%u", &e);
	printf("Вы ввели число, которое было прочитано как целое 10тичное без знака %u", e);
	puts("");
}
