// a program that constructs one word from two words

#include <stdio.h>
#define SIZE 80

void TwoWord(char* s1, const char* s2); 

int main(void)
{
	char string1[SIZE]; 
	char string2[SIZE]; 

	puts("Enter two strings: ");
	scanf_s("%79s%79s", string1, 79, string2, 79);
	TwoWord(string1, string2);
	printf("%s", string1);
} 

void TwoWord(char* s1, const char* s2)
{
	while (*s1 != '\0') {
		++s1;
	} 

	for (; *s1 = *s2; ++s1, ++s2) {
		; 
	} 
} 
