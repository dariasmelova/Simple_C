// a program that prints a diamond

#include <stdio.h>

int main(void) {
	int a, b, c, d;

	for (a = 5; a >= 1; a--) {
		for (b = 1; b < a; b++) {
			printf(" ");
		}
		for (c = 1; c <= (11 - 2 * a); c++) {
			printf("*");
		}
		for (d = 1; d < a; d++) {
			printf(" ");
		}
		printf("\n");
	}
	for (a = 2; a <= 5; a++) {
		for (b = 1; b < a; b++) {
			printf(" ");
		}
		for (c = (11 - 2 * a); c >= 1; c--) {
			printf("*");
		}
		for (d = 1; d < a; d++) {
			printf(" ");
		}
		printf("\n");
	}
}
