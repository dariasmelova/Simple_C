/* a program that finds all Pythagorean triples for sides no larger than 500;
a Pythagorean triple ia a set of three integer values for the sides of a right triangle */

#include <stdio.h>

int main(void) {
	
	int a, b, c;

	for (c = 1; c <= 500; c++) {
		for (a = 1; a <= 500; a++) {
			for (b = 1; b <= 500; b++) {
				if (a * a + b * b == c * c)
					printf("I found a right triangle with the hypotenuse %d and the sides %d and %d\n", c, a, b);
			}

		}
	}
}
